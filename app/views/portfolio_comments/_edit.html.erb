<%= render 'layouts/flash' %>
<div id="portfolio_comment_edit_form">
  <%= form_with(model: [portfolio, portfolio_comment]) do |f| %>
    <div class="input-field">
      <%= f.text_area :comment, class: "materialize-textarea", id: "portfolio_comment_comment_#{portfolio.id}" %>
      <%= f.label :comment, class: "active" %>
      <%= button_tag :type => "submit", :class =>"btn waves-effect waves-light" do %>
        送信
      <% end %>
      <%= link_to :back, class: "btn white black-text waves-effect waves-light" do %>
        戻る
      <% end %>
    </div>
  <% end %>
</div>