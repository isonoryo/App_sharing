<h1>新着投稿ポートフォリオ</h1>
<h2>検索フォーム</h2>
<%= render 'search_form' %>

<table>
  <tr>
    <th>アプリ名</th>
    <th>作者名</th>
    <th>いいね数</th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.name %></td>
    <td><%= portfolio.user.name %></td>
    <td><%= render partial: 'portfolios/portfolios', locals: { portfolio: portfolio } %></td>
    <td><%= link_to 'ポートフォリオ詳細へ', portfolio_path(portfolio.id) %></td>
    <td><%= link_to 'ポートフォリオ編集へ', edit_portfolio_path(portfolio.id), data: {confirm: '本当に編集してよろしいですか？'}  %></td>
    <td><%= link_to 'ポートフォリオを削除する', portfolio_path(portfolio.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'} %></td>
  </tr>
<% end %>
</table>

<%= link_to 'ポートフォリオ投稿', new_portfolio_path %>
<%= link_to 'いいねランキングへ', ranking_portfolios_path %>
<%= link_to 'マイページへ', "/user/#{current_user.id}" %>
 