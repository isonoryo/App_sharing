<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <!-- Main navigation -->
  <!-- Full Page Intro -->
  <section style="background-image: url('/assets/website-1624028_1280.png'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <!-- Mask & flexbox options-->
    <div class="mask d-flex justify-content-center align-items-center">
      <!-- Content -->
      <div class="container py-5 my-5">
        <h3 class="font-weight-bold text-center black-text pb-2">無料で始めましょう</h3>
        <p class="lead text-center black-text pt-2 mb-5">Supports the best LoL life</p>  
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center">
          <!--Grid column-->
          <div class="col-md-6 col-xl-5">
            <!--Form-->
            <div class="card">
            
              <div class="md-form">
                <i class="fa fa-user prefix black-text"></i>
                <%= f.label :name %><br/>
                <%= f.text_field :name, autofocus: true %>
              </div>

              <div class="md-form">
                <i class="fa fa-envelope prefix black-text"></i>
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="md-form">
                <i class="fa fa-images prefix black-text"></i>
                <br>
                <%= f.label :profile_image %><br/>
                <%= f.file_field :profile_image %>
              </div>

              <div class="md-form">
                <i class="fa fa-pencil-alt prefix black-text"></i>
                <br><br>
                <%= f.label :learning_start %>
                <%= f.date_select :learning_start,
                use_month_numbers: true,
                start_year: 1980, end_year: (Time.now.year),
                default: Date.new(1999, 1, 1),
                :discard_day => true %>
              </div>

              <div class="md-form">
                <i class="fa fa-school prefix black-text"></i>
                <br><br>
                <%= f.label :school %>
                <%= f.select :school_id, School.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
              </div>

              <div class="md-form">
                <i class="fas fa-key prefix black-text"></i>
                <br><br>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('view.characters_minimum') %>)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="md-form">
                <i class="fas fa-key prefix black-text"></i>
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="text-center my-3">
                <div class="actions">
                  <button class="btn btn-indigo btn-block">新規登録</button>
                </div>
              </div>
            </div>
          </div>
          <!--/.Form-->
        </div>
        <!--Grid column-->
      </div>
      <!--Grid row-->
    </div>
    <!-- Content -->
  <!-- Mask & flexbox options-->
</section>
<!-- Full Page Intro -->
<!-- Main navigation -->
<% end %>
