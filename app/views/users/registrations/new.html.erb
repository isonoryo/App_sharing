<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="signup_alert row justify-content-center">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
  <!-- Main navigation -->
  <!-- Full Page Intro -->
  <section style="background-image: url('/assets/website-1624028_1280.png'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="mask d-flex justify-content-center align-items-center">
      <div class="container py-5 my-5">
        <div class="container my-5 z-depth-1">
          <section style="background-color: #2bbbad !important", class="dark-grey-text">
            <div class="row pr-lg-12">
              <div class="col-md-6 mb-20">
                <div class="view">
                  <img src="https://mdbootstrap.com/img/illustrations/graphics(2).png" class="img-fluid" alt="smaple image">
                </div>
              </div>
              <div class="col-md-6 d-flex align-items-center">
                <div>
                  <h2 class="font-weight-bold white-text mb-10">AppSharingでポートフォリオを</h2>
                  <h2 class="font-weight-bold white-text mb-10">シェアしよう！</h2>
                  <h4 class="step">STEP1</h4>
                  <h5 class="font-weight-bold white-text mb-10">ユーザー登録（学習歴、スクール等）</h5>
                  <h4 class="step">STEP2</h4>
                  <h5 class="font-weight-bold white-text mb-10">ポートフォリオ登録（使用言語、デプロイ先等）</h5>
                  <h4 class="step">STEP3</h4>
                  <h5 class="font-weight-bold white-text mb-10">みんなでポートフォリオをシェアしよう！</h5>
                  <h5 class="font-weight-bold white-text mb-10">（いいね、コメント等）</h5>
                </div>
              </div>
            </div>
          </section>
        </div> 
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center">
          <!--Grid column-->
          <div class="col-md-6 col-xl-5">
            <!--Form-->
            <div class="card">
            
              <div class="md-form">
                <i class="fa fa-user prefix black-text"></i>
                <%= f.label :name %><br/>
                <%= f.text_field :name, autofocus: true %>
              </div>

              <div class="md-form">
                <i class="fa fa-envelope prefix black-text"></i>
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="md-form">
                <i class="fa fa-images prefix black-text"></i>
                <br>
                <%= f.label :profile_image %><br/>
                <%= f.file_field :profile_image %>
              </div>

              <div class="md-form">
                <i class="fa fa-pencil-alt prefix black-text"></i>
                <br><br>
                <%= f.label :learning_start %>
                <%= f.date_select :learning_start,
                use_month_numbers: true,
                start_year: 1980, end_year: (Time.now.year),
                default: Date.new(1999, 1, 1),
                :discard_day => true %>
              </div>

              <div class="md-form">
                <i class="fa fa-school prefix black-text"></i>
                <br><br>
                <%= f.label :school %>
                <%= f.select :school_id, School.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
              </div>

              <div class="md-form">
                <i class="fas fa-key prefix black-text"></i>
                <br><br>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('view.characters_minimum') %>)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="md-form">
                <i class="fas fa-key prefix black-text"></i>
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="text-center my-3">
                <div class="actions">
                  <button class="btn btn-indigo btn-block">新規登録</button>
                </div>
              </div>
            </div>
          </div>
          <!--/.Form-->
        </div>
        <!--Grid column-->
      </div>
      <!--Grid row-->
    </div>
    <!-- Content -->
  <!-- Mask & flexbox options-->
</section>
<!-- Full Page Intro -->
<!-- Main navigation -->
<% end %>
